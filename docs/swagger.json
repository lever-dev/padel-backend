{
    "swagger": "2.0",
    "info": {
        "description": "API documentation for the Padel Backend service.",
        "title": "Padel Backend API",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/v1/reservations/{orgID}/courts/{courtID}": {
            "post": {
                "description": "Creates a reservation for the specified organization and court.",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "reservations"
                ],
                "summary": "Reserve a court",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Organization ID",
                        "name": "orgID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Court ID",
                        "name": "courtID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Reservation payload",
                        "name": "reservation",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/http.ReserveCourtRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/http.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/http.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/v1/reservations/{reservationID}": {
            "delete": {
                "description": "Cancels the reservation with the specified ID.",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "reservations"
                ],
                "summary": "Cancel a reservation",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Reservation ID",
                        "name": "reservationID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Cancellation payload",
                        "name": "cancel",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/http.CancelReservationRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/http.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/http.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/http.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "http.CancelReservationRequest": {
            "type": "object",
            "properties": {
                "cancelledBy": {
                    "description": "CancelledBy is the ID or name of the user performing the cancellation\nexample: \"user_123\"",
                    "type": "string"
                }
            }
        },
        "http.ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "description": "Message provides a human-readable description of the error.",
                    "type": "string",
                    "example": "invalid JSON body"
                }
            }
        },
        "http.ReserveCourtRequest": {
            "type": "object",
            "properties": {
                "endTime": {
                    "description": "EndTime is the reservation end timestamp in RFC3339 format\nexample: 2025-11-04T19:45Z\nformat: date-time",
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-04T19:45Z"
                },
                "startTime": {
                    "description": "StartTime is the reservation start timestamp in RFC3339 format\nexample: 2025-11-04T18:30Z\nformat: date-time",
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-04T18:30Z"
                }
            }
        }
    }
}